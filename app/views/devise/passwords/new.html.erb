<style>
  .form-container {
    max-width: 400px;
    margin: 40px auto; /* Centrer le formulaire avec une marge en haut et en bas */
    border: 2px solid #ccc;
    border-radius: 10px;
    padding: 10px;
    font-family: 'Roboto', sans-serif;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .form-container label {
    width: 100%;
    margin-bottom: 20px; /* Réduire l'espacement entre les étiquettes */
  }

  .form-container button {
    width: 100%;
    margin: 20px 0; /* Réduire la marge du bouton */
  }

  .form-container h2 {
    margin-bottom: 20px;
    text-align: center;
    margin-top: 0;
    font-family: 'Roboto', sans-serif;
  }

  .text {
    text-align: center;
    text-decoration: none;
    font-family: 'Roboto', sans-serif;
    margin-bottom: 20px;
  }

  .h2 {
    text-align: center;
  }
</style>




<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-container form-inputs card-color">
    <h2>Forgot your password?</h2>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-container text card-color">
    <%= f.button :submit, "Send me reset password instructions" %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
