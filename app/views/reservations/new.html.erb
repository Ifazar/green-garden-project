<h2>Voulez-vous r√©server ce lieu ?</h2>

<div class="form-container">
  <%= simple_form_for [@garden, @reservation] do |t| %>
    <%= t.input :user, collection: User.all  %>
    <%= t.input :date
    {
    mode: "range",
    minDate: "today",
    dateFormat: "Y-m-d",
    disable: [
        function(date) {
            // disable every multiple of 8
            return !(date.getDate() % 8);
        }
    ]
    } %>



    <%= t.submit  %>
  <% end %>
</div>
<div>
  <%= link_to "Return to all Garden",  pages_path %>
</div>
