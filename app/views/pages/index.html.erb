
<div class="flex-container">
  <% @pages.each do |garden| %>

    <div class="cards">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=garden.picture%>')">
        <%= link_to garden.name, garden_path(garden) %>
        <%= garden.detail %>
        <%= garden.price %>
      </div>
    </div>

  <% end %>
</div>
<%= link_to "Create garden", new_garden_path %>
